<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/comment_userName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Артем Вдовин"
        android:textColor="#2196F3" />

    <TextView
        android:id="@+id/comment_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/comment_userName"
        android:text="Вообще то это не картошка, а нечто другое, неизвестное науке растение"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/comment_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/comment_text"
        android:text="23.12.1996"
        android:textColor="#979090" />

    <View
        android:layout_marginTop="4dp"
        android:layout_width="match_parent"
        android:layout_below="@id/comment_date"
        android:layout_height="1sp"
        android:background="#9A9595" />

</RelativeLayout>